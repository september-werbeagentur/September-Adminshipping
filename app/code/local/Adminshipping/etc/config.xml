<?xml version="1.0"?>

<config>
    <modules>
        <September_Adminshipping>
            <version>1.0.0</version>
        </September_Adminshipping>
    </modules>
    <!-- Konfiguration unseres Modul-Verhaltens -->
    <global>
        <models>
            <adminshipping>
                <class>September_Adminshipping_Model</class>
            </adminshipping>
            <shipping>
                <rewrite>
                    <shipping>September_Adminshipping_Model_Shipping</shipping>
                </rewrite>
            </shipping>
        </models>

        <blocks>
            <adminshipping>
                <class>September_Adminshipping_Block</class>
            </adminshipping>
        </blocks>

        <!-- f체r Hilfsfunktionen -->
        <helpers>
            <adminshipping>
                <class>September_Adminshipping_Helper</class>
            </adminshipping>
        </helpers>
    </global>

    <default>
        <carriers>
            <september_adminshipping> <!-- Neue Versandart hinzuf체gen -->
                <active>1</active> <!-- aktiv 0 - nein / 1 - ja -->
                <sallowspecific>0</sallowspecific> <!-- erlaubte L채nder ausw채hlbar? -->
                <model>adminshipping/carrier_adminshipping</model> <!-- dort lebt die Logik unseres Moduls -->
                <name>Selbstabholung</name> <!-- Name, wird so im Adminbereich angezeigt -->
                <title>Selbstabholung</title> <!-- Titel, zur Ausgabe im Frontend -->
                <specificerrmsg>This method is currently not activated</specificerrmsg> <!-- Fehlernachricht, falls Versandmethode nicht aktiviert ist -->
            </september_adminshipping>
        </carriers>
    </default>
</config>